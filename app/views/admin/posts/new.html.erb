<script>
  $(function() {
    $('textarea#froala-editor').froalaEditor()
  });
</script>

<%= form_for [:admin, @post] do |f|  %>
<!-- check for errors -->
    <%if @post.errors.any? %>
        <% @post.errors.full_messages.each do |msg| %>
    <!-- show errors -->
            <div class="alert alert-danger"><%= msg %></div>
        <%end%>
    <% end %>
    
    <div class="form-group row">
        <div class="col-xs-10">
        <%= f.label :title %>
            <%= f.text_field :title , class: 'form-control' %>
        </div>
    </div>
        
    <div class="form-group row">
        <div class="col-xs-10">
        <%= f.label :category %>
            <%= f.select :category_id, Category.all.collect {|x| [x.name, x.id]}, {:include_blank => 'Select One'}, class: 'form-control' %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-10">
        <%= f.label :author %>
             <%= f.select :user_id, User.all.collect {|x| [x.name, x.id]}, {:include_blank => 'Select One'}, class: 'form-control' %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-10">
        <%= f.label :image %>
            <%= f.file_field :image %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-10">
        <%= f.label :tags %>
            <%= f.text_area :tags, class: 'form-control' %>
        </div>
    </div>
        <div class="form-group row">
        <div class="col-xs-10">
        <%= f.label :body %>
            <%= f.text_area :body, class: 'form-control',%>
        </div>
    </div>
    </div>
        <br>
        <%= f.submit "Submit", class: 'btn btn-primary' %>
        <%= link_to "Cancel", admin_categories_path, class: 'btn btn-default'%>
    <% end %>