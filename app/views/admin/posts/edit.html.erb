<%= form_for [:admin, @post] do |f|  %>
<!-- check for errors -->
    <%if @post.errors.any? %>
        <% @post.errors.full_messages.each do |msg| %>
    <!-- show errors -->
            <div class="alert alert-danger"><%= msg %></div>
        <%end%>
    <% end %>
    
    <div class="form-group row">
        <%= f.label :title %>
        <div class="col-xs-10">
            <%= f.text_field :title , class: 'form-control' %>
        </div>
    </div>
        
    <div class="form-group row">
        <%= f.label :category %>
        <div class="col-xs-10">
            <%= f.select :category_id, Category.all.collect {|x| [x.name, x.id]}, {:include_blank => 'Select One'}, class: 'form-control' %>
        </div>
    </div>
    <div class="form-group row">
        <%= f.label :author %>
        <div class="col-xs-10">
             <%= f.select :user_id, User.all.collect {|x| [x.name, x.id]}, {:include_blank => 'Select One'}, class: 'form-control' %>
        </div>
    </div>
    <div class="form-group row">
        <%= f.label :image %>
        <div class="col-xs-10">
            <%= f.file_field :image %>
        </div>
    </div>
    <div class="form-group row">
        <%= f.label :tags %>
        <div class="col-xs-10">
            <%= f.text_area :tags, class: 'form-control' %>
        </div>
    </div>
        <div class="form-group row">
        <%= f.label :body %>
        <div class="col-xs-10">
            <%= f.text_area :body, class: 'form-control' %>
        </div>
    </div>
    </div>
        <br>
        <%= f.submit "Submit", class: 'btn btn-primary' %>
        <%= link_to "Cancel", admin_categories_path, class: 'btn btn-default'%>
    <% end %>